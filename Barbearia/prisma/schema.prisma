generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Abaixo os seus modelos (Exemplos):
model User {
  id    String @id @default(uuid())
  email String @unique
}

model Barbershop {
  id       String    @id @default(uuid())
  name     String
  address  String
  imageUrl String
  services Service[]
}

model Service {
  id           String     @id @default(uuid())
  name         String
  price        Decimal
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
}